generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String @unique
  password String
  exp      Int    @default(0)  // XP do usuário
  level    Int    @default(1)  // Nível do usuário
  ranking  String @default("noob") // Ranking do usuário
}

